---
import Layout from '../Layouts/Layout.astro'
import ThankYouLayout from '../Layouts/ThankYouLayout.astro'
import Button from '../components/Button.astro'
import '/src/styles/style.scss'
---

<ThankYouLayout>
	<main>
		<div class="wrapper">
			<h1>Message Received</h1>
			<p>
				Thanks for connecting with Soul of the Gypsy! ðŸŒŸ You are now on your journey to having an
				original piece of art from my talented husband Kev.
			</p>
			<Button text="Back to website" to="/" variant="white-outline" />
		</div>
	</main>
</ThankYouLayout>

<style is:global lang="scss">
	main {
		.wrapper {
			padding-block: 10rem;

			h1 {
				text-align: center;
				margin-inline: auto;
				font-size: 96px;
				max-width: 12ch;

				@media (max-width: 700px) {
					font-size: 48px;
				}
			}
			p {
				margin-block: 1.5rem 2.5rem;
				max-width: 60ch;
				text-align: center;
				margin-inline: auto;

				@media (max-width: 700px) {
					max-width: 32ch;
					margin-block: 1rem 2.5rem;
				}
			}
			a {
				margin-inline: auto;
				display: block;
				width: max-content;
			}
		}
	}
</style>
