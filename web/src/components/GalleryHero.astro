---
import { formatTitle } from '../lib/formatTitle.js'
import Dialog from './pop-ups/Dialog.astro'
const { tag, title, styles } = Astro.props

const formattedTitle = formatTitle(title)
---

<main>
	<div class="rectangle"></div>
	<div class="wrapper">
		<Dialog styles={styles} />
		<div class="title">
			<h1 set:html={formattedTitle} />
		</div>
		<div class="buttons">
			<a class="open-modal" id="open-modal"
				>Search by art style <img
					src="/svg/open-external-svgrepo-com.svg"
					alt="Open Art Menu Icon"
				/></a
			>
		</div>

		<svg
			id="keep-scrolling"
			width="15"
			height="28"
			viewBox="0 0 15 28"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
		>
			<rect
				x="1.03516"
				y="0.589844"
				width="12.93"
				height="26.2188"
				rx="6.46501"
				stroke="white"
				stroke-width="0.5"></rect>
			<circle cx="7.5" cy="20.3125" r="5.01172" fill="white"></circle>
		</svg>
	</div>
</main>
<script type="module">
	if (window.location.pathname === '/gallery/') {
		let smoother = window.smoother

		const keepScrollingIcon = document.getElementById('keep-scrolling')

		keepScrollingIcon.addEventListener('click', (event) => {
			event.preventDefault()
			smoother.scrollTo('#fine-art', true, 'top top')
		})
		document.addEventListener('DOMContentLoaded', (event) => {
			const openModal = document.querySelectorAll('.open-modal')
			const dialog = document.querySelector('.search-dialog')
			const closeModal = document.getElementById('close-modal')

			openModal.forEach((openButton) => {
				openButton.addEventListener('click', (event) => {
					event.stopPropagation() // Prevent this click from triggering the document click event
					dialog.showModal()
				})
			})

			closeModal.addEventListener('click', (event) => {
				event.stopPropagation() // Prevent this click from triggering the document click event
				dialog.close()
			})

			document.addEventListener('click', (event) => {
				if (event.target === dialog) {
					dialog.close()
				}
			})
		})
	}
</script>
<script>
	import { gsap } from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'
	gsap.registerPlugin(ScrollTrigger)

	const heroTimelineGallery = gsap.timeline()

	const artMenuButtonInline = document.querySelector('.buttons #open-modal')
	const artMenuButton = document.querySelector('#open-modal.fixed')

	gsap.to(artMenuButton, {
		scrollTrigger: {
			start: 'top center',
			trigger: artMenuButtonInline,
			toggleActions: 'play none none reset'
		},
		visibility: 'visible',
		pointerEvents: 'all'
	})

	heroTimelineGallery
		.to('main .rectangle', {
			scale: 1,
			filter: 'blur(0px)',
			duration: 1,
			ease: 'ease'
		})
		.to(
			'main h1, main a',
			{
				y: 0,
				opacity: 1,
				ease: 'power1.inOut',
				stagger: 0.25
			},
			'-=0.4'
		)
</script>
<style is:global lang="scss">
	main {
		position: relative;
		.rectangle {
			position: absolute;
			width: 100%;
			height: 100%;
			background-color: white;

			background-image: linear-gradient(to top, #03030390, #03030300 70%),
				url('/images/new-hero-images/kevs-hero-galler-desktop.webp');
			background-size: cover;
			background-position: center;
			z-index: -1;
			scale: 2;
			filter: blur(10px);
		}

		.wrapper {
			padding-block: 28rem 4rem;
			position: relative;
			display: flex;
			align-items: center;
			justify-content: flex-end;
			flex-direction: column;
			gap: 0;

			#keep-scrolling {
				width: 1.5rem;
				position: absolute;
				left: 50%;
				top: 100%;
				transform: translate(-50%, 0%);
				cursor: pointer;

				circle {
					animation: bounce 2s infinite ease-in-out;

					@keyframes bounce {
						0% {
							transform: translateY(0);
						}
						50% {
							transform: translateY(-0.25rem);
						}
						100% {
							transform: translateY(0);
						}
					}
				}
			}

			.buttons {
				a {
					color: $white;
					cursor: pointer;
					transform: translateY(2rem);
					opacity: 0;
					display: flex;
					align-items: center;
					gap: 0.5rem;
					text-decoration: underline 1px;
					padding: 0.5rem 2rem;
					border: 0.5px solid $white;
					margin-block-start: 1rem;
					border-radius: 4rem;
					transition: 300ms ease scale;
					transition: 300ms ease letter-spacing;

					img {
						width: 1.5rem;
						transition: 300ms ease scale;
					}

					&:hover {
						letter-spacing: 0.1rem;
						transition: 300ms ease letter-spacing;
						img {
							scale: 1.1;
							transition: 300ms ease scale;
						}
					}
				}
			}

			.title {
				width: 40%;
				h3 {
					color: $white;
					// clip-path: polygon(0 0, 0 0, 0 100%, 0 100%);
					line-height: 1;
					text-align: center;
					width: max-content;
					margin-inline: auto;
					font-size: 24px;
					margin-block: 0 0.5rem;
				}
				h1 {
					// clip-path: polygon(0 0, 0 0, 0 100%, 0 100%);
					font-size: clamp($mobile-h1, 14vw, $h1);
					text-align: center;
					width: max-content;
					margin-inline: auto;
					transform: translateY(2rem);
					opacity: 0;

					@media (max-width: 500px) {
						font-size: clamp(64px, 22vw, $mobile-h1) !important;
					}

					span {
						font-style: italic !important;
					}
				}
			}
		}
		@media (max-width: 1024px) {
			.wrapper {
				& > img {
					bottom: auto;
					top: 6rem;
					width: clamp(75px, 12vw, 150px);
				}
			}
		}
		@media (max-width: 800px) {
			.rectangle {
				background-image: linear-gradient(to top, #03030390, #03030300 70%),
					url('/images/new-hero-images/kev-hero-mobile-long.webp');
			}

			.wrapper {
				padding-block: 40rem 2rem;
				max-height: 1000px;

				& > .title {
					position: absolute;
					top: 30%;
					left: 50%;
					transform: translate(-50%, -50%);
					width: 100%;

					h1 {
						font-size: $mobile-h1;
						color: $black;
					}
				}
				.title {
					h3 {
						font-size: 20px;
						color: $black;
						width: 100% !important;
					}
				}
				.florence-image {
					width: 100%;
					transform: none;
					margin-inline-start: -4rem;
					margin-block-end: -2rem;
					// border: 2px solid red;
				}
				.soul-image {
					width: 100%;
					transform: none;
					margin-inline-end: -8rem;
					margin-block-end: -6rem;
				}
			}
		}

		@media (max-width: 450px) {
			.wrapper {
				.title {
					h3 {
						font-size: 14px;
						span {
							font-size: calc(20px * 1.4);
							vertical-align: middle;
						}
					}
				}
			}
		}
	}
</style>
