---
const { title, tag, text, image } = Astro.props
import { urlForImage } from '../../lib/urlForImage'
import Button from '../Button.astro'
import Tag from '../type/Tag.astro'
import { PortableText } from '@portabletext/react'
---

<section class="quote-card-section">
	<div class="wrapper">
		<div class="card">
			<div class="left">
				<Tag text={tag} />
				<div class="body">
					<PortableText value={title} />
				</div>
				<svg
					id="keep-scrolling-about"
					width="15"
					height="28"
					viewBox="0 0 15 28"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<rect
						x="1.03516"
						y="0.589844"
						width="12.93"
						height="26.2188"
						rx="6.46501"
						stroke="white"
						stroke-width="0.5"></rect>
					<circle cx="7.5" cy="20.3125" r="5.01172" fill="white"></circle>
				</svg>
			</div>
			<div class="right">
				<img src={urlForImage(image).format('webp').url()} alt={image.alt} />
			</div>
		</div>
	</div>
</section>
<script>
	import { gsap } from 'gsap'
	import { ScrollTrigger } from 'gsap/ScrollTrigger'
	gsap.registerPlugin(ScrollTrigger)

	gsap.to('.quote-card-section .card', {
		scrollTrigger: {
			trigger: '.quote-card-section .card',
			start: 'top 90%',

			toggleActions: 'play none none reverse'
		},
		clipPath: 'polygon(0 -50%, 150% -50%, 150% 100%, 0 100%)'
	})
	const keepScrollingAboutIcon = document.getElementById('keep-scrolling-about')
	let smoother = window.aboutSmoother
	keepScrollingAboutIcon.addEventListener('click', (event) => {
		event.preventDefault()
		smoother.scrollTo('#inspiration', true, 'top top')
	})
</script>
<style is:global lang="scss">
	.quote-card-section {
		.wrapper {
			padding-block: 6rem;

			.card {
				width: 100%;
				background-color: $light-black;
				display: flex;
				align-items: stretch;
				padding: 4rem 4rem;
				gap: 2rem;
				clip-path: polygon(0 0, 0 0, 0 100%, 0% 100%);
				position: relative;

				.left {
					width: 55%;
					align-self: center;

					#keep-scrolling-about {
						width: 1.5rem;
						position: absolute;
						left: 50%;
						top: 90%;
						transform: translate(-50%, 0%);
						cursor: pointer;

						circle {
							animation: bounce 2s infinite ease-in-out;

							@keyframes bounce {
								0% {
									transform: translateY(0);
								}
								50% {
									transform: translateY(-0.25rem);
								}
								100% {
									transform: translateY(0);
								}
							}
						}
					}

					.body {
						p {
							font-size: $h3;
							line-height: 1.3;
							margin-block: 0.75rem 2.5rem;

							strong {
								font-weight: 600;
								// color: $blue;

								em {
									font-weight: 600;
									font-style: italic;
									// color: $blue;
								}
							}
							em {
								font-style: italic;
							}
						}
						@media (max-width: 700px) {
							p {
								font-size: $mobile-h3;
							}
						}
					}

					& > p {
						max-width: 50ch;
						color: $blue;
					}
					.buttons {
						display: flex;
						align-items: flex-start;
						gap: 1rem;
						a {
							color: $white;
							font-weight: 300;
							text-decoration: underline;
							display: block;
							cursor: pointer;
						}
					}
				}
				.right {
					width: 45%;
					margin-block-end: -4rem;
					margin-inline-end: -4rem;
					width: calc(45% + 4rem);
					display: flex;
					align-items: flex-end;
					position: relative;

					img {
						&:nth-child(2) {
							position: absolute;
							width: 100px;
							top: -6rem;
							right: -2rem;
						}
					}
				}
			}
		}
		@media (max-width: 900px) {
			.wrapper {
				.card {
					flex-direction: column;

					.left {
						width: 100%;
						h2 {
							max-width: 16ch;
						}
					}
					.right {
						width: calc(100% + 4rem);
					}
				}
			}
		}
		@media (max-width: 700px) {
			.wrapper {
				.card {
					padding-inline: 2rem;
					.right {
						width: calc(100% + 2rem);
					}
				}
			}
		}
		@media (max-width: 500px) {
			.wrapper {
				.card {
					padding-inline: 1rem;
					.right {
						width: calc(100% + 1rem);
					}
				}
			}
		}
	}
</style>
